\begin_inset VSpace 20baselineskip%
\end_inset


\begin_inset Formula 
\[
\text{ex}_{S}\triangleq\,\begin{array}{|c||c|}
 & A\\
\hline A & \text{id}\\
A\times A & \pi_{1}
\end{array}\quad.
\]

\end_inset

