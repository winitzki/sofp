\end_layout

\begin_layout Plain Layout

  val result = halfSpeed.zip(str) // Stream[(T, T)]
\end_layout

\begin_layout Plain Layout

  .drop(1) // Enforce the condition k > 0.
\end_layout

\begin_layout Plain Layout

  .takeWhile { case (h, s) => h != s } // Stream[(T, T)]
\end_layout

\begin_layout Plain Layout

  .map(_._2) // Stream[T]
\end_layout

\begin_layout Plain Layout

  str.head +: result // Prepend the first element that was dropped.
\end_layout

\begin_layout Plain Layout

}
\end_layout

