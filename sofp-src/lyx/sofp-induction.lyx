\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

scala> fruitBasket.map { case (fruit, count) => (fruit, count, count * 2)
 }.
\end_layout

\begin_layout Plain Layout

         map { case (fruit, _, count2) => (fruit, count2 / 2) }.toMap
\end_layout

