\begin_inset listings
inline false
status open

\begin_layout Plain Layout

def filter[A](p: A => Boolean)(c: Option[A] => Z): Option[A] => Z = {
\end_layout

\begin_layout Plain Layout

  case Some(a) if p(a)   => c(Some(a))          // Only apply `c` to `a`
 if p(a) == true.
\end_layout

\begin_layout Plain Layout

  case _                 => c(None)       // Return c(None) if p(a) == false,
 or for empty Option.
\end_layout

\begin_layout Plain Layout

}   // Equivalent code is: filter(p)(c) = _.filter(p).pipe(c)
\end_layout

\end_inset


