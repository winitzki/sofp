\begin_inset Formula 
\[
\text{pu}_{L}\bef\text{blift}_{L}^{N}=\text{pu}_{T_{L}^{N}}\quad,\quad\quad\text{pu}_{N}\bef\text{flift}_{L}^{N}=\text{pu}_{T_{L}^{N}}\quad.
