\begin_inset Formula 
\begin{align*}
 & \theta_{P}\bef\text{ftn}_{M}=\,\begin{array}{|c||c|}
 & M^{A}\\
\hline M^{A} & \text{pu}_{M}\bef\text{ftn}_{M}\\
N^{M^{A}} & \text{brun}_{K}\bef\text{ftn}_{M}
\end{array}\,=\,\begin{array}{|c||c|}
