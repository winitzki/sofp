\begin_inset Formula 
\[
\text{fold}_{\text{Opt}}^{A}:H^{A}\rightarrow K^{A}\quad,\quad\quad H^{A}\triangleq B\times\left(A\times B\rightarrow B\right)\quad,\quad\quad K^{A}\triangleq\text{Opt}^{A}\rightarrow B\quad,
\]

\end_inset

